<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.core.runtime"
   name="%pluginName"
   version="3.0.0"
   provider-name="%providerName"
   class="org.eclipse.core.internal.runtime.PlatformActivator">

   <runtime>
      <library name="runtime.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.osgi" export="true"/>
      <import plugin="org.eclipse.osgi.services" export="true"/>
      <import plugin="org.eclipse.osgi.util" export="true"/>
   </requires>


   <extension-point id="applications" name="%applicationsName" schema="schema/applications.mxsd"/>
   <extension-point id="urlHandlers" name="%handlersName" schema="schema/urlHandlers.mxsd"/>
   <extension-point id="products" name="%productsName" schema="schema/products.exsd"/>
   <extension-point id="adapters" name="%adaptersName" schema="schema/adapters.exsd"/>
   <extension-point id="preferences" name="preferences" schema="schema/preferences.exsd"/>
   <extension-point id="contentTypes" name="%contentTypesName"/>

	<extension id="platform-preferences" point="org.eclipse.core.runtime.preferences" name="platform-preferences">
		<preferences scope="configuration" class="org.eclipse.core.internal.preferences.ConfigurationPreferences"/>
		<preferences scope="instance" class="org.eclipse.core.internal.preferences.InstancePreferences"/>
		<preferences scope="default" class="org.eclipse.core.internal.preferences.EclipsePreferences"/>
	</extension>

	<extension point="org.eclipse.core.runtime.contentTypes">
		<content-type id="text" name="%textFileName" 
			mime-type="text/plain"
			file-extensions="txt"/>
		<content-type id="xml" name="%xmlFileName" 
			base-type="text"
			mime-type="text/xml"
			file-extensions="xml"
			default-charset="UTF-8"
			describer-class="org.eclipse.core.internal.content.XMLContentDescriber"/>
	</extension>		 


</plugin>
