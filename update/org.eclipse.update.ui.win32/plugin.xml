<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.eclipse.update.ui.win32"
   name="%pluginName"
   version="2.1.0"
   provider-name="%providerName"
   class="org.eclipse.welcome.internal.WelcomePortal">

   <runtime>
      <library name="updateui32.jar">
         <export name="*"/>
         <packages prefixes="org.eclipse.welcome.internal"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.help.ui"/>
   </requires>


   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.eclipse.update.ui.win32.actionSet">
         <action
               label="Open Home Page"
               icon="icons/sample.gif"
               tooltip="Open Home Page"
               class="org.eclipse.welcome.internal.ShowBrowserAction"
               menubarPath="help/helpEnd"
               id="org.eclipse.welcome.internal.ShowBrowserAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <actionSet
               id="org.eclipse.update.ui.win32.actionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Welcome Portal"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.welcome.internal.WebBrowserEditorContributor"
            class="org.eclipse.welcome.internal.WebBrowserEditor"
            id="org.eclipse.welcome.portal">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.eclipse.welcome.internal.WelcomeEditorInputFactory"
            id="org.eclipse.welcome.internal.WelcomeEditorInputFactory">
      </factory>
   </extension>

</plugin>
